# 应用配置
APP_NAME=Lemo Recommender
DEBUG=true
API_PREFIX=/api/v1

# 服务配置
HOST=0.0.0.0
PORT=8080
# 注意：8000端口被Attu(Milvus管理界面)占用，推荐系统使用8080

# MongoDB配置（本项目启动）
MONGODB_URL=mongodb://admin:password@localhost:27017
MONGODB_DATABASE=lemo_recommender

# Redis配置（使用本地已有服务）
REDIS_URL=redis://:redis_password_2024@localhost:6379/0

# Kafka配置（使用本地已有服务）
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Milvus配置（使用本地已有服务，第二阶段启用）
MILVUS_ENABLED=false
MILVUS_HOST=localhost
MILVUS_PORT=19530

# 外部服务配置（gRPC）
TENANT_SERVICE_GRPC_URL=localhost:9000
USER_SERVICE_GRPC_URL=localhost:9001

# 安全配置
SECRET_KEY=your-secret-key-please-change-in-production

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 监控配置
ENABLE_METRICS=true

# Celery配置（使用本地Redis）
CELERY_BROKER_URL=redis://:redis_password_2024@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:redis_password_2024@localhost:6379/2
